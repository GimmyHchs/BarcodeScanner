<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_fragment_bluetooth_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/et_fragment_bluetooth_input"
        android:layout_centerHorizontal="true" />
    <EditText

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_fragment_bluetooth_input"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Hello you bitch"
        android:inputType="text" />

    <Button
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="Start Scan"
        android:id="@+id/btn_fragment_bluetooth_start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="Stop Scan"
        android:id="@+id/btn_fragment_bluetooth_stop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tc_fragment_bluetooth_clock"
        android:textSize="70sp"
        android:layout_above="@+id/btn_fragment_bluetooth_start"
        android:layout_centerHorizontal="true" />

</RelativeLayout>